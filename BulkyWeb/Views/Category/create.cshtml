@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h1 class="text-primary">Create Category</h1>
        </div>
        <hr />
        <div class="mb-3 row">
            <label asp-for="Name" class="text-dark"></label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="DisplayOrder" class="text-dark"></label>
            <input asp-for="DisplayOrder" class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control" >Create</button>

            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="category" asp-action="index" class="btn btn-outline-info form-control" >Back to List</a>
            </div>
        </div>
    </div>
</form>